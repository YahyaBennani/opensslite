sign_file() {
  read -p "üìÑ Fichier √† signer : " fichier
  if [[ ! -f "$fichier" ]]; then
    echo "‚ùå Fichier introuvable."
    return
  fi

  read -p "üîê Chemin vers la cl√© priv√©e RSA DSA EC ou autre si vous n'avez pas de cles veuillez retourner au menu precedent et creer une (.pem) : " privkey
  if [[ ! -f "$privkey" ]]; then
    echo "‚ùå Cl√© priv√©e introuvable."
    return
  fi

  sig_file="${fichier}_sig"
  openssl dgst -sha256 -sign "$privkey" -out "$sig_file" "$fichier"

  if [[ $? -eq 0 ]]; then
    echo "‚úÖ Signature g√©n√©r√©e avec succ√®s : $sig_file"
  else
    echo "‚ùå √âchec de la signature."
  fi
}

verify_signature() {
  read -p "üìÑ Fichier original : " fichier
  if [[ ! -f "$fichier" ]]; then
    echo "‚ùå Fichier introuvable."
    return
  fi

  read -p "üìÑ Fichier signature (_sig) : " sig_file
  if [[ ! -f "$sig_file" ]]; then
    echo "‚ùå Fichier de signature introuvable."
    return
  fi

  read -p "üîì Cl√© publique (.pem) : " pubkey
  if [[ ! -f "$pubkey" ]]; then
    echo "‚ùå Cl√© publique introuvable."
    return
  fi

  openssl dgst -sha256 -verify "$pubkey" -signature "$sig_file" "$fichier"
  if [[ $? -eq 0 ]]; then
    echo "‚úÖ Signature valide !"
  else
    echo "‚ùå Signature invalide ou fichier modifi√©."
  fi
}

# Menu principal
while true; do
  echo ""
  echo -e "\e[1;36m====== ‚úçÔ∏è Signature Num√©rique OpenSSL ======\e[0m"
  echo "1. Signer un fichier"
  echo "2. V√©rifier une signature"
  echo "3. Retour"
  echo "==========================================="
  read -p "üéØ Ton choix : " choix

  case "$choix" in
    1) sign_file ;;
    2) verify_signature ;;
    3) echo "‚Ü©Ô∏è Retour au menu pr√©c√©dent..."; bash ./project; break ;;
    *) echo "‚ùå Choix invalide." ;;
  esac
done
