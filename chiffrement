algos=(
  "aes-128-cbc" "aes-192-cbc" "aes-256-cbc"
  "aes-128-ecb" "aes-192-ecb" "aes-256-ecb"
  "aes-128-ofb" "aes-192-ofb" "aes-256-ofb"
  "aes-128-cfb" "aes-192-cfb" "aes-256-cfb"
  "des" "des-ede3" "des-cbc" "des-ede3-cbc"
  "rc4" "rc4-40"
  "camellia-128-cbc" "camellia-192-cbc" "camellia-256-cbc"
  "idea" "seed" "bf-cbc"
)

while true; do
echo""
echo ""
  echo ""
  echo "=== Algorithmes de chiffrement OpenSSL enc ==="
  for i in "${!algos[@]}"; do
    printf "%2d. %s\n" $((i+1)) "${algos[$i]}"
  done
  echo "25. Retour"
  echo "=============================================="

  read -p "Ton choix [0-${#algos[@]}] : " choix

  if [[ "$choix" -eq 25 ]]; then
    clear 
bash ./project
    break
  fi

  if [[ "$choix" -lt 1 || "$choix" -gt ${#algos[@]} ]]; then
    echo "‚ùå Choix invalide."
    continue
  fi

  algo="${algos[$((choix-1))]}"

  read -p "Chemin du fichier √† chiffrer : " fichier
  if [ ! -f "$fichier" ]; then
    echo "‚ùå Fichier introuvable."
    continue
  fi

  read -s -p "Mot de passe (cl√© de chiffrement) : " pass
  echo ""

  out_file="${fichier}_enc_${algo//-/}"

  echo "üîê Chiffrement avec $algo en cours..."
  openssl enc -e -"${algo}" -k "$pass" -in "$fichier" -out "$out_file"

  if [[ $? -eq 0 ]]; then
    echo "‚úÖ Fichier chiffr√© : $out_file"
  else
    echo "‚ùå Une erreur s‚Äôest produite pendant le chiffrement."
  fi
done
